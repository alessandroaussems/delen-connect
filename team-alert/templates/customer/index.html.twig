<!DOCTYPE html>

<title>Customer index</title>

{% block body %}
    <h1>Customer index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Created</th>
                <th>Updated</th>
                <th>Id</th>
                <th>Name</th>
                <th>LastName</th>
                <th>YearOfBirth</th>
                <th>YearOfDeath</th>
                <th>City</th>
                <th>Country</th>
                <th>Sex</th>
                <th>Language</th>
                <th>Type</th>
                <th>StatRv</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for customer in customers %}
            <tr>
                <td>{{ customer.created ? customer.created|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ customer.updated ? customer.updated|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ customer.id }}</td>
                <td>{{ customer.name }}</td>
                <td>{{ customer.lastName }}</td>
                <td>{{ customer.yearOfBirth ? customer.yearOfBirth|date('Y-m-d') : '' }}</td>
                <td>{{ customer.yearOfDeath ? customer.yearOfDeath|date('Y-m-d') : '' }}</td>
                <td>{{ customer.city }}</td>
                <td>{{ customer.country }}</td>
                <td>{{ customer.sex }}</td>
                <td>{{ customer.language }}</td>
                <td>{{ customer.type }}</td>
                <td>{{ customer.statRv }}</td>
                <td>
                    <a href="{{ path('customer_show', {'id': customer.id}) }}">show</a>
                    <a href="{{ path('customer_edit', {'id': customer.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="14">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('customer_new') }}">Create new</a>
{% endblock %}
